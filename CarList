package carFactory;

import java.rmi.RemoteException;
import java.rmi.server.UnicastRemoteObject;
import java.util.ArrayList;

public class CarList extends UnicastRemoteObject implements CarListInterface {

    private ArrayList<Car> cars;

    public CarList() throws RemoteException {
        cars = new ArrayList<>();   //start empty list
    }

    @Override
    public void addCar(Car c) {
        cars.add(c);
    }

    @Override
    public ArrayList<Car> getCars() {
        return cars;
    }

    @Override
    public void updateCar(int index, Car c) {
        cars.set(index, c);
    }

    @Override
    public void deleteCar(int index) {
        cars.remove(index);
    }
}
